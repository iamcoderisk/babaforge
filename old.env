# Application
FLASK_APP=run.py
FLASK_ENV=production
PORT=5000
SECRET_KEY=$(openssl rand -hex 32)

# Database
DATABASE_URL=postgresql://sendbaba:SecurePassword123!@localhost:5432/emailer

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Email Configuration
SMTP_HOST=mail.sendbaba.com
SMTP_PORT=587
SMTP_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@sendbaba.com
DEFAULT_FROM_NAME=SendBaba

# Domain
PRIMARY_DOMAIN=sendbaba.com
API_DOMAIN=api.sendbaba.com

# DKIM
DKIM_SELECTOR=default
DKIM_DOMAIN=sendbaba.com
DKIM_PRIVATE_KEY=/opt/sendbaba-smtp/keys/dkim_private.pem
DKIM_PUBLIC_KEY=/opt/sendbaba-smtp/keys/dkim_public.pem

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Logging
LOG_LEVEL=INFO
LOG_DIR=/opt/sendbaba-smtp/logs

# Security
CORS_ORIGINS=https://sendbaba.com,https://www.sendbaba.com,https://api.sendbaba.com

# Server
SERVER_IP=156.67.29.186